# Screen Time Competition Backend - Environment Variables
# Copy this file to .env and customize the values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
# For development, you can use SQLite (default)
DATABASE_URL=sqlite:///app.db

# For production, use PostgreSQL or MySQL
# DATABASE_URL=postgresql://user:password@localhost/screen_time_db
# DATABASE_URL=mysql://user:password@localhost/screen_time_db

# CORS Configuration (React frontend URL)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Optional: Additional Configuration
DEBUG=true
TESTING=false